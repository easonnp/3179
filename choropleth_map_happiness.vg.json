{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Happiness Score by Countries in 2023",
    "width": 800,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "background": "skyblue",
    "layer": [
      {
      "data": {
        "url": "https://raw.githubusercontent.com/easonnp/3179/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },

      "transform": [
       {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/easonnp/3179/main/WHR2023.csv"
            },
            "key": "Country",
            "fields": ["Happiness score"]
          }
        }
      ],
      
      "mark": {"type": "geoshape","stroke": "white"},
      "encoding": {
        "color": {
          "field": "Happiness score",
          "type": "quantitative",
          "title": "Happiness Score",
          "scale": {
            "type": "linear"
          }
        },
  
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Happiness score", "type": "quantitative", "title": "Happiness Score"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/easonnp/3179/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null , "stroke": "lightgray"}
    }
  ]
}

    
    